{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://w3c.github.io/webref/schemas/extract-links.json",

  "type": "object",
  "additionalProperties": false,
  "required": ["spec", "links"],
  "properties": {
    "spec": { "$ref": "common.json#/$defs/specInExtract" },

    "links": {
      "type": "object",
      "propertyNames": { "$ref": "common.json#/$defs/url" },
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "anchors": {
            "type": "array",
            "items": { "$ref": "common.json#/$defs/id" },
            "minItems": 1
          },
          "specShortname": { "$ref": "common.json#/$defs/shortname" }
        }
      }
    }
  }
}
