{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://w3c.github.io/webref/schemas/extract-events.json",

  "type": "object",
  "additionalProperties": false,
  "required": ["spec", "events"],
  "properties": {
    "spec": { "$ref": "common.json#/$defs/specInExtract" },

    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "interface"],
        "properties": {
          "type": { "type": "string" },
          "interface": { "$ref": "common.json#/$defs/interface" },
          "targets": {
            "type": "array",
            "items": { "$ref": "common.json#/$defs/interface" }
          },
          "bubbles": { "type": "boolean" },
          "isExtension": { "type": "boolean" },
          "href": { "$ref": "common.json#/$defs/nullableurl" },
          "src": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "format": { "type": "string" },
              "href": { "$ref": "common.json#/$defs/nullableurl" }
            }
          }
        }
      }
    }
  }
}
